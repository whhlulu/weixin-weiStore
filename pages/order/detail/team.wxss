.circle-line {
    position: relative;
    border-top: 1rpx dashed #ddd;
}

.circle-line:before,.circle-line:after {
    display: inline-block;
    content: " ";
    height: 20rpx;
    width: 20rpx;
    border: 1rpx solid #ddd;
    border-radius: 100%;
    position: absolute;
    top: -10rpx;
    background-color: #fff;
}

.circle-line:before {
    left: -10rpx;
    border-left: 1rpx solid transparent;
    border-bottom: 1rpx solid transparent;
    transform: rotate(45deg);
}

.circle-line:after {
    right: -10rpx;
    border-right: 1rpx solid transparent;
    border-top: 1rpx solid transparent;
    transform: rotate(45deg);
}

.coupon-number {
    text-decoration: line-through;
}

.padding-right {
    line-height: 40rpx;
    padding-right: 18rpx;
}

.arrow-right {
    position: relative;
}

.arrow-right:after {
    content: "";
    display: block;
    width: 12rpx;
    height: 12rpx;
    border-top: 2rpx solid #FF5050;
    border-right: 2rpx solid #FF5050;
    position: absolute;
    top: 50%;
    right: 0;
    margin-top: -6rpx;
    margin-left: 10rpx;
    transform: rotate(45deg);
}

