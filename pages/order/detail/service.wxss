.cancel-btn {
    display: inline-block;
    width: 162rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border: 1px solid #DDDDDD;
}

.blank-padding {
    padding-bottom: 120rpx;
}

.bottom-button {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background: #FAFAFA;
    box-shadow: 0 -1px 1px 0 #E0E0E0;
}

.all-stores {
    line-height: 100rpx;
}

.all-stores-text {
    padding-left: 10rpx;
}

.bottom-button-item {
    position: absolute;
    right: 30rpx;
}

.go-pay {
    display: inline-block;
    width: 212rpx;
    height: 60rpx;
    margin-left: 20rpx;
    line-height: 60rpx;
    text-align: center;
}